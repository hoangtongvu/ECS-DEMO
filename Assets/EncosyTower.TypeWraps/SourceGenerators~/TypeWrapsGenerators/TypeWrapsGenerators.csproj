<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	<LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="Microsoft.CodeAnalysis.Workspaces.Common" Version="4.3.1" />
	<PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.1" />
	<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.3.1" PrivateAssets="all" />
	<PackageReference Include="System.Text.Json" Version="8.0.5" />
  </ItemGroup>
  
  <Target Name="CustomAfterBuild" AfterTargets="Build">
	<ItemGroup>
	  <_FilesToCopy Include="$(OutputPath)**\$(AssemblyName).dll"/>
	</ItemGroup>
	<Copy SourceFiles="@(_FilesToCopy)" DestinationFolder="$(OutputPath)..\..\..\..\..\SourceGenerators"/>
  </Target>

</Project>
